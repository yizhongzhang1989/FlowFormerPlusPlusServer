{
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false
  },
  "model": {
    "checkpoint_path": "checkpoints/sintel.pth",
    "device": "auto",
    "max_image_size": 1024
  },
  "upload": {
    "max_file_size_mb": 10,
